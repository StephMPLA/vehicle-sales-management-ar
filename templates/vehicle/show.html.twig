{% extends 'base.html.twig' %}

{% block title %}{{ vehicle.name }}{% endblock %}

{% block javascripts %}
<script type="module" src="{{ asset('js/vehicle-show.js') }}"></script>
{% endblock %}
{% block body %}

    {% set cover = (vehicle.images|length > 0) ? vehicle.images|first.path : asset('uploads/noImageAvailable.png') %}

    <div class="bg-white">

        {# ================= HERO COVER ================= #}
        <section class="relative w-full">
            <div class="relative h-[320px] sm:h-[420px] lg:h-[520px] overflow-hidden">
                <img src="{{ cover }}"
                     alt="{{ vehicle.name }}"
                     class="w-full h-full object-cover">

                {# overlay #}
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>

                {# content #}
                <div class="absolute bottom-0 left-0 right-0">
                    <div class="max-w-6xl mx-auto px-6 pb-8">
                        <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
                            <div>
                                <h1 class="text-3xl sm:text-4xl font-bold text-white">
                                    {{ vehicle.name }}
                                </h1>
                                <p class="text-white/80 mt-2">
                                    {{ vehicle.brand.name }} • {{ vehicle.year }} • {{ vehicle.category.name }}
                                </p>
                            </div>

                            <div class="flex items-center gap-3">
                                {% if vehicle.model3dPath %}
                                    <button type="button"
                                            id="btnGo3D"
                                            class="inline-flex items-center justify-center rounded-lg px-4 py-2 font-semibold bg-white text-gray-900 hover:bg-gray-100">
                                        3D / AR
                                    </button>
                                {% endif %}

                                <div class="rounded-lg px-4 py-2 bg-blue-600 text-white font-bold text-lg">
                                    {{ vehicle.price|number_format(0, ',', ' ') }} €
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        {# ================= CONTENT ================= #}
        <div class="max-w-6xl mx-auto px-6 py-10">

            <div class="grid lg:grid-cols-12 gap-10">


                <div class="lg:col-span-7 space-y-8">

                    {# GALLERY (carousel)  #}
                    <div id="vehicleCarousel" class="relative overflow-hidden">

                        {% if vehicle.images|length > 0 %}

                            <div id="carouselTrack"
                                 class="flex transition-transform duration-300 ease-in-out">

                                {% for img in vehicle.images %}
                                    <a href="{{ img.path }}"
                                       data-fancybox="gallery"
                                       class="min-w-full block">

                                        <img src="{{ img.path }}"
                                             alt="{{ vehicle.name }}"
                                             class="w-full h-[420px] object-cover rounded-xl">
                                    </a>
                                {% endfor %}

                            </div>
                            <div id="carouselThumbs"
                                 class="flex gap-3 mt-4 overflow-x-auto">

                                {% for img in vehicle.images %}
                                    <button type="button"
                                            class="thumbBtn border-2 border-transparent rounded-lg overflow-hidden"
                                            data-index="{{ loop.index0 }}">

                                        <img src="{{ img.path }}"
                                             class="w-24 h-16 object-cover">
                                    </button>
                                {% endfor %}

                            </div>

                            <button id="prevBtn"
                                    type="button"
                                    class="absolute z-20 left-3 top-1/2 -translate-y-1/2 bg-black/60 text-white px-3 py-2 rounded">
                                ‹
                            </button>

                            <button id="nextBtn"
                                    type="button"
                                    class="absolute z-20 right-3 top-1/2 -translate-y-1/2 bg-black/60 text-white px-3 py-2 rounded">
                                ›
                            </button>

                        {% else %}

                            <img src="{{ asset('uploads/noImageAvailable.png') }}"
                                 class="w-full h-[420px] object-cover rounded-xl">

                        {% endif %}

                    </div>


                    <div class="bg-white border rounded-2xl shadow-sm p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-3">Description</h2>
                        <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                            {{ vehicle.description }}
                        </p>
                    </div>

                </div>

                <aside class="lg:col-span-5 space-y-6">

                    <div class="bg-white border rounded-2xl shadow-sm p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">Key specs</h2>

                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Mileage</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.mileage|number_format(0, ',', ' ') }} km
                                </div>
                            </div>

                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Power</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.horsePower }} hp
                                </div>
                            </div>

                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Fuel</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.fuel.name }}
                                </div>
                            </div>

                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Transmission</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.transmission.name }}
                                </div>
                            </div>

                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Weight</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.weight }} kg
                                </div>
                            </div>

                            <div class="rounded-xl bg-gray-50 p-4">
                                <div class="text-gray-500">Condition</div>
                                <div class="font-bold text-gray-900 mt-1">
                                    {{ vehicle.isNew ? 'New' : 'Used' }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white border rounded-2xl shadow-sm p-6">
                        <h3 class="text-lg font-bold text-gray-900">Interested?</h3>
                        <p class="text-gray-600 mt-2">
                            Add your contact / reservation CTA here later.
                        </p>

                        <div class="mt-4 flex gap-3">
                            <button type="button"
                                    class="flex-1 bg-gray-900 hover:bg-gray-800 text-white rounded-lg px-4 py-2 font-semibold">
                                Contact
                            </button>
                            <button type="button"
                                    class="flex-1 bg-blue-600 hover:bg-blue-700 text-white rounded-lg px-4 py-2 font-semibold">
                                Reserve
                            </button>
                        </div>
                    </div>

                </aside>

            </div>

            {% if vehicle.model3dPath %}
                <section id="viewer3d" class="mt-12">
                    <div class="bg-white border rounded-2xl shadow-sm p-6">
                        <div class="flex items-center justify-between gap-4 mb-5">
                            <h2 class="text-2xl font-bold text-gray-900">3D / AR Preview</h2>

                            <span class="text-sm text-gray-500">
                                AR button appears on compatible mobile devices.
                            </span>
                        </div>

                        <model-viewer
                            src="{{ asset(vehicle.model3dPath) }}"
                            camera-controls
                            auto-rotate
                            shadow-intensity="1"
                            ar
                            ar-modes="scene-viewer webxr quick-look"
                            class="w-full h-[520px] bg-gray-100 rounded-xl">
                        </model-viewer>
                    </div>
                </section>
            {% endif %}

        </div>

    </div>

{% endblock %}
