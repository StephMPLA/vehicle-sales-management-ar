{% extends 'base.html.twig' %}

{% block title %}Create an account{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 px-4">

        <div class="w-full max-w-md">

            {# Card #}
            <div class="bg-white rounded-2xl shadow-xl p-8">

                <div class="text-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-800">
                        Create your account
                    </h1>
                    <p class="text-sm text-gray-500 mt-1">
                        Join the Vehicle Sales platform
                    </p>
                </div>

                {# global errors #}
                {% if form_errors(registrationForm) %}
                    <div class="bg-red-100 border border-red-200 text-red-700 p-3 rounded-lg text-sm mb-4">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                {{ form_start(registrationForm, {
                    attr: { class: 'space-y-5' }
                }) }}

                {# Honeypot hidden #}
                <div class="hidden">
                    {{ form_row(registrationForm.website) }}
                </div>

                {# First Name #}
                <div>
                    <label class="block text-sm font-semibold mb-1 text-gray-700">
                        First Name
                    </label>
                    {{ form_widget(registrationForm.firstName, {
                        attr: {
                            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        }
                    }) }}
                    <div class="text-sm text-red-600 mt-1">
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                </div>

                {# Last Name #}
                <div>
                    <label class="block text-sm font-semibold mb-1 text-gray-700">
                        Last Name
                    </label>
                    {{ form_widget(registrationForm.lastName, {
                        attr: {
                            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        }
                    }) }}
                    <div class="text-sm text-red-600 mt-1">
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                </div>

                {# Email #}
                <div>
                    <label class="block text-sm font-semibold mb-1 text-gray-700">
                        Email address
                    </label>
                    {{ form_widget(registrationForm.email, {
                        attr: {
                            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        }
                    }) }}
                    <div class="text-sm text-red-600 mt-1">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>

                {# Password #}
                <div>
                    <label class="block text-sm font-semibold mb-1 text-gray-700">
                        Password
                    </label>
                    {{ form_widget(registrationForm.plainPassword.first, {
                        attr: {
                            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                        }
                    }) }}
                </div>

                {# Confirm Password #}
                <div>
                    <label class="block text-sm font-semibold mb-1 text-gray-700">
                        Confirm password
                    </label>
                    {{ form_widget(registrationForm.plainPassword.second, {
                        attr: {
                            class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500"
                        }
                    }) }}

                    <p class="text-xs text-gray-500 mt-2">
                        Minimum 12 characters recommended
                    </p>

                    <div class="text-sm text-red-600 mt-1">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                </div>

                {# Terms #}
                <div class="flex items-start gap-3 text-sm">
                    {{ form_widget(registrationForm.agreeTerms, {
                        attr: { class: "mt-1" }
                    }) }}
                    <label class="text-gray-600 leading-snug">
                        I agree to the terms of service
                    </label>
                </div>

                {# Submit #}
                <button
                    type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 active:scale-[0.99] text-white font-semibold py-2.5 rounded-lg transition shadow-sm"
                >
                    Create account
                </button>

                {{ form_end(registrationForm) }}

                {# Login link #}
                <div class="text-center text-sm text-gray-600 mt-6">
                    Already have an account?
                    <a href="{{ path('app_login') }}"
                       class="text-blue-600 hover:text-blue-700 font-semibold hover:underline">
                        Sign in
                    </a>
                </div>

            </div>

            {# Footer micro trust #}
            <p class="text-center text-xs text-gray-500 mt-4">
                Password security follows modern best practices
            </p>

        </div>
    </div>
{% endblock %}
