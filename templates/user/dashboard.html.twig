{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}

    <div class="min-h-screen bg-gray-100 p-6 space-y-8">

        <!-- HEADER -->
        <div class="bg-white rounded-xl shadow p-6">
            <h1 class="text-2xl font-bold text-gray-800">
                My Account
            </h1>
            <p class="text-gray-500 mt-1">
                Manage your profile, favorites and requests
            </p>
        </div>

        <!-- PROFILE -->
        <div class="bg-white rounded-xl shadow p-6">
            <h2 class="font-semibold text-lg mb-4">Profile information</h2>

            <div class="grid md:grid-cols-2 gap-4 text-sm">

                <div>
                    <p class="text-gray-500">Email</p>
                    <p class="font-medium">{{ app.user.email }}</p>
                </div>

                <div>
                    <p class="text-gray-500">Account type</p>
                    <p class="font-medium">Client</p>
                </div>

            </div>

            <a href="{{ path('app_user_profile') }}"
               class="inline-block mt-4 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
                Edit my information
            </a>
        </div>

        <!-- FAVORITES -->
        <div class="bg-white rounded-xl shadow overflow-hidden">

            <div class="p-4 border-b bg-gray-50 flex justify-between">
                <h2 class="font-semibold">Favorite vehicles</h2>
            </div>

            <table class="min-w-full text-sm">
                <thead class="bg-gray-50 text-xs uppercase text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Vehicle</th>
                    <th class="px-4 py-3 text-center">Price</th>
                    <th class="px-4 py-3 text-center">Action</th>
                </tr>
                </thead>

                <tbody class="divide-y">

                {% for v in favorites|default([]) %}
                    <tr>
                        <td class="px-4 py-3 font-medium">{{ v.name }}</td>
                        <td class="px-4 py-3 text-center">
                            {{ v.price|number_format(0, ',', ' ') }} â‚¬
                        </td>
                        <td class="px-4 py-3 text-center">
                            <a href="#"
                               class="text-red-600 hover:underline">
                                Remove
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-8 text-gray-400">
                            No favorites yet
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

        <!-- RESERVATION REQUESTS -->
        <div class="bg-white rounded-xl shadow overflow-hidden">

            <div class="p-4 border-b bg-gray-50">
                <h2 class="font-semibold">Reservation requests</h2>
            </div>

            <table class="min-w-full text-sm">
                <thead class="bg-gray-50 text-xs uppercase text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Vehicle</th>
                    <th class="px-4 py-3 text-center">Date</th>
                    <th class="px-4 py-3 text-center">Status</th>
                </tr>
                </thead>

                <tbody class="divide-y">

                {% for r in reservations|default([]) %}
                    <tr>
                        <td class="px-4 py-3">{{ r.vehicle.name }}</td>
                        <td class="px-4 py-3 text-center">
                            {{ r.createdAt|date('Y-m-d') }}
                        </td>
                        <td class="px-4 py-3 text-center">
                        <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded text-xs">
                            Pending
                        </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center py-8 text-gray-400">
                            No requests
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

    </div>

{% endblock %}
